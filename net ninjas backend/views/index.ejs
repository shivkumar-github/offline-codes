<!DOCTYPE html>
<html lang="en">

<%- include('./partials/header.ejs') %> <!-- This includes the <head> section -->

<body>
	<%- include('./partials/nav.ejs') %>

	<h3>Blogs</h3>

	<% if(blogs.length > 0) { %>
		<% blogs.forEach(blog => { %>
			<h3><%= blog.title %></h3>
			<p><%= blog.snippet %></p>
		<% }); %>
	<% } else { %>
		<p>No blogs to display</p>
	<% } %>

	<%- include('./partials/footer.ejs') %>
</body>

</html>
